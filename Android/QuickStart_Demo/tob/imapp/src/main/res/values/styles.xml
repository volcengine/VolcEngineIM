<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--activity 淡入淡出-->
    <style name="FadeActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/anim_fade</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="anim_fade" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>
</resources>