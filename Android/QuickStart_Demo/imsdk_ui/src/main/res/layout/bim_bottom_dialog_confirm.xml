<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_dialog_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_im_logout_dialog_bg">


    <TextView
        android:id="@+id/tv_dialog_bottom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        tools:text="@string/im_mine_logout_title"
        android:textColor="@color/business_im_999"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/business_im_f8f8"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_bottom_title" />

    <TextView
        android:id="@+id/tv_first_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="退出登录"
        android:textColor="@color/business_im_coral"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_bottom_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/business_im_f8f8"
        app:layout_constraintTop_toBottomOf="@id/tv_first_btn" />

    <TextView
        android:id="@+id/tv_second_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="取消"
        android:textColor="@color/business_im_222"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_first_btn" />

</android.support.constraint.ConstraintLayout>