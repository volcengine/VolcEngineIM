<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_msg_replay_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_im_msg_replay_bg"
        android:ellipsize="end"
        android:maxWidth="240dp"
        android:maxLines="2"
        android:padding="2dp"
        android:textColor="@color/im_text_second"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_msg_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_im_conversation_msg_send_bg"
        android:maxWidth="240dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:textColor="@color/business_base_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_msg_property"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_im_msg_property_bg"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/business_im_999"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_read_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_im_msg_property_bg"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/business_im_999"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>
